{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "lib",             // ✅ 빌드 결과물이 저장될 폴더
    "rootDir": "src",            // ✅ 타입스크립트 소스 위치
    "strict": true,
    "esModuleInterop": true,     // ✅ express + cors default import 위해 필요
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
