{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist", 
    "allowJs": false   // ✅ 이게 중요! JS 파일은 컴파일하지 않도록 설정
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],  // ✅ 오직 TypeScript만 포함
  "exclude": ["node_modules", "dist", "src/**/*.js"] // ✅ 기존 JS 제외
}
